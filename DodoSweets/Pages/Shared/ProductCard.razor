@inject MudBlazor.ISnackbar Snackbar
@inject NavigationManager Nav

<MudCard Style="width:220px;background-color:whitesmoke">
    <MudCardMedia Image="@Image" Style="background-size:cover;background-position:top;margin-bottom:30px" Height="170"/>

    <MudCardContent Style="padding:0px">
        <MudText Typo="Typo.subtitle2" Align="Align.Center">
            @Name
        </MudText>

        <MudStack Row="true" Justify="Justify.Center" Spacing="1">
            <MudText Color="Color.Default" Style="text-decoration:line-through">
                @OldPrice ج
            </MudText>

            <MudText Color="Color.Error" Typo="Typo.h6">
                @Price ج
            </MudText>
        </MudStack>
    </MudCardContent>

    <MudCardActions>
        <MudButton Variant="Variant.Filled"
                   Color="Color.Primary"
                   FullWidth="true" 
                   onclick="@AddToCart">
            عرض
        </MudButton>
    </MudCardActions>
</MudCard>

@code {

    [Parameter] 
        public string? Name { get; set; }
    [Parameter] 
        public string? Image { get; set; }
    [Parameter] 
        public decimal Price { get; set; }
    [Parameter] 
        public decimal OldPrice { get; set; }

    void AddToCart()
    {
        Nav.NavigateTo($"/item/{Name}");

        // Snackbar.Add("Operation successful!", Severity.Success);
    }
}