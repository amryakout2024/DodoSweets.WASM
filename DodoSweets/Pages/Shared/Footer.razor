@using Microsoft.Extensions.Options
@inject IStringLocalizer<AppResource> Loc

<!--inject IOptions<ContactInfoOptions> ContactInfoOptions-->

<div class="container-fluid footer-container mt-5  text-light wow fadeIn" data-wow-delay="0.1s">
    <div class="container pb-5">
        <div class="row g-5">
            <div class="col-12 col-md-12 col-lg-6">
                <div class="footer-border-bottom d-flex flex-column align-items-center justify-content-center rounded p-2">
                    <a class="anchor-style" href="">
                        <h3 class="mb-3">@Loc["dodossweets"]</h3>
                    </a>
                    <p class="text-white mb-0">
                        @Loc["Delicioussweetsandcakes"]
                    </p>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <h6 class="frame-title text-uppercase mb-4">@Loc["Contactus"]</h6>
                <p class="mb-2 d-flex">
                    <i class="fa fa-map-marker-alt me-3 justify-content-start"></i>
                    @Loc["elmahallaelkubra"]
                </p>
                <p class="mb-2 d-flex">
                    <i class="fa fa-phone-alt me-3 justify-content-start"></i>
                    0541238108</p>
                <p class="mb-2 d-flex">
                    <i class="fa fa-envelope me-3 justify-content-start"></i>
                    amrnewstory@gmail.com</p>                
                <div class="d-flex pt-2 justify-content-start">
                    <a class="btn btn-outline-light btn-social m-1" href="https://twitter.com/" target="_blank"><i class="fab fa-twitter"></i></a>
                    <a class="btn btn-outline-light btn-social m-1" href="" target="_blank"><i class="fab fa-facebook-f"></i></a>
                    <a class="btn btn-outline-light btn-social m-1" href="https://www.youtube.com/" target="_blank"><i class="fab fa-youtube"></i></a>
                    <a class="btn btn-outline-light btn-social m-1" href="https://www.linkedin.com/in/amr-yakout-683ba0272/" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                </div>
            </div>

            <div class="col-12 col-md-6 col-lg-3">
                <div class="col-md-6 d-flex flex-column align-items-start">
                    <h6 class="frame-title">@Loc["company"]</h6>
                    <a class="frame-body" href="">@Loc["Whoareus"]</a>
                    <a class="frame-body" href="">@Loc["privacypolicy"]</a>
                    <a class="frame-body" href="">@Loc["Termsandconditions"]</a>
                </div>
            </div>


</div>
    </div>
    <div class="container">
        <div class="copyright">
            <div class="row">
                <MudStack class="col-md-6 text-start mb-2 p-0" Spacing="0">
                    <MudStack Row="true" Spacing="1">
                        , @Loc["allrightsreserved"] 
                        &copy; 
                        <a style="color:darkslateblue" class="me-1" href="/"> @Loc["dodossweets"]</a>
                    </MudStack>
                    <MudStack Row="true" Spacing="1">
                        @Loc["Developedby"]
                        <a style="color:darkslateblue" class="ms-1"
                           href="https://www.linkedin.com/in/amr-yakout-683ba0272/">
                            amr yakout
                        </a>
                    </MudStack>
                </MudStack>
                <div class="col-md-6">
                    <div class="d-flex align-items-end text-center mb-2 justify-content-center justify-content-md-end">
                        <a href="/" style="color:darkslateblue">@Loc["Home"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

